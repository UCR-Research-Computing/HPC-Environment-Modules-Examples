#%Module1.0#####################################################################
##
## libsequence modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tlibsequence - Adds libsequence to your path"
}

module-whatis	"libsequence-1.8.5"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

prepend-path    PATH            ${hpcc_modules}/libsequence/1.8.5/bin
prepend-path	MANPATH		${hpcc_modules}/libsequence/1.8.5/share/man
prepend-path	CPATH		${hpcc_modules}/libsequence/1.8.5/include	
prepend-path	LIBRARY_PATH	${hpcc_modules}/libsequence/1.8.5/lib
prepend-path	LD_LIBRARY_PATH	${hpcc_modules}/libsequence/1.8.5/lib
prepend-path	LD_RUN_PATH	${hpcc_modules}/libsequence/1.8.5/lib
module		use		${modules_dir}

