#%Module1.0#####################################################################
##
## qiime2 modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tqiime2- Adds qiime2 to your path"
}

module-whatis	"qiime2-2017.12"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

# All python versions need to be unloaded
conflict    python
conflict    anaconda
conflict    miniconda

# Load miniconda
module load miniconda3/4.3.31

# Set character encoding
setenv LC_ALL en_US.utf-8
setenv LANG en_US.utf-8

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3/4.3.31; source activate qiime2-2017.12;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "source deactivate;"
}

# Add path manually, since source activate does not function within parent shell
prepend-path    PATH    ${iigb_modules}/miniconda3/4.3.21/envs/qiime2-2017.12/bin

module		use		${modules_dir}
