#%Module1.0#####################################################################
##
## ALLMAPS modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tALLMAPS - Adds Python and ALLMAPS paths to your path"
}

# NOTE THIS IS BASICALLY INSTALLED INTO PYTHON PATH
# WITH THE HELPER EXES IN THE UPDATED PATH
# SEE https://github.com/tanghaibao/jcvi/wiki/ALLMAPS

module-whatis	"ALLMAPS-0.5.5"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

prepend-path    PATH            ${iigb_modules}/ALLMAPS/0.5.5/bin

module		use		${modules_dir}

module load python
module load kent
