#%Module1.0#####################################################################
##
## singularity-ce modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tsingularity-ce - Adds singularity-ce to your path"
}

module-whatis   "singularity-ce-3.9.3"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set     version         3.2.9
set     prefix          ${modules_dir}/${version}
set     exec_prefix     ${prefix}
set     datarootdir     ${prefix}/share

setenv          SINGULARITY_BINDPATH    /bigdata
prepend-path    PATH                    ${hpcc_modules}/singularity-ce/3.9.3/bin
