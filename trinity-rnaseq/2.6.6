#%Module1.0#####################################################################
##
## trinity-rnaseq modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\ttrinity-rnaseq - Adds trinity-rnaseq to your path"
}

module-whatis	"trinity-rnaseq-2.6.6"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

module unload perl
module load perl/5.22.0
prereq perl/5.22.0
module load java/8u25
module load bowtie2
module unload samtools
module load samtools/1.6
module load salmon
module load jellyfish

prepend-path    PATH            ${hpcc_modules}/trinity-rnaseq/2.6.6
prepend-path    PATH            ${hpcc_modules}/trinity-rnaseq/2.6.6/util
setenv          TRINITY_HOME    ${hpcc_modules}/trinity-rnaseq/2.6.6
setenv          TRINITYHOME     ${hpcc_modules}/trinity-rnaseq/2.6.6

