#%Module1.0#####################################################################
##
## dmtcp modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tdmtcp- Adds dmtcp to your path"
}

module-whatis	"dmtcp-2.5.2"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

module load htslib/2.5.2
prepend-path    PATH              ${iigb_modules}/dmtcp/2.5.2/bin
#prepend-path    LD_LIBRARY_PATH   ${iigb_modules}/dmtcp/1.4.1/htslib/lib
prepend-path	MANPATH		  ${iigb_modules}/dmtcp/2.5.2/share/man
setenv	SAMTOOLS_PATH	${iigb_modules}/dmtcp/2.5.2/bin
module		use		${modules_dir}

