#%Module1.0#####################################################################
##
## Ruby modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tRuby - Adds Ruby 2.7.5 to your path"
}

module-whatis	"ruby-2.7.5"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set prefix      ${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

prepend-path    PATH   	        ${hpcc_modules}/ruby/2.7.5/bin:${hpcc_modules}/ruby/2.7.5/lib/ruby/2.7.5/bin
prepend-path    INCLUDE_PATH    ${hpcc_modules}/ruby/2.7.5/include
prepend-path    LD_LIBRARY_PATH ${hpcc_modules}/ruby/2.7.5/lib
prepend-path    MANPATH         ${hpcc_modules}/ruby/2.7.5/share/man
prepend-path	GEM_HOME        ${hpcc_modules}/ruby/2.7.5/lib/ruby/2.5.0/


