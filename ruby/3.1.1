#%Module1.0#####################################################################
##
## Ruby modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tRuby - Adds Ruby 3.1.1 to your path"
}

module-whatis	"ruby-3.1.1"

set      hpcc_modules    $::env(HPCC_MODULES)

prepend-path    PATH   	        ${hpcc_modules}/ruby/3.1.1/bin:${hpcc_modules}/ruby/3.1.1/lib/ruby/3.1.1/bin
prepend-path    INCLUDE_PATH    ${hpcc_modules}/ruby/3.1.1/include
prepend-path    LD_LIBRARY_PATH ${hpcc_modules}/ruby/3.1.1/lib
prepend-path    MANPATH         ${hpcc_modules}/ruby/3.1.1/share/man
prepend-path	GEM_HOME        ${hpcc_modules}/ruby/3.1.1/lib/ruby/2.5.0/

