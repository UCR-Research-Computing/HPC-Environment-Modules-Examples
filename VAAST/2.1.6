#%Module1.0#####################################################################
##
## maui modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tVAAST - Adds VAAST to your path"
}

module-whatis	"VAAST-2.1.6"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

module      load  perl
module      switch perl/5.22.0

prepend-path    PATH            ${hpcc_modules}/VAAST/2.1.6/bin
prepend-path    PERL5LIB        ${hpcc_modules}/VAAST/2.1.6/lib
prepend-path	PATH		${hpcc_modules}/VAAST/2.1.6/bin/vaast_tools

module		use		${modules_dir}

