#%Module1.0#####################################################################
##
## perl modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tperl - Adds perl to your path"
}

module-whatis	"perl-5.16.3"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

prepend-path    PATH            ${hpcc_modules}/perl/5.16.3/bin 
prepend-path    PERL5LIB        ${hpcc_modules}/perl/5.16.3/lib/5.16.3:${hpcc_modules}/perl/5.16.3/lib/site_perl/5.16.3
setenv          INSTALL_BASE    ${hpcc_modules}/perl/5.16.3
conflict        perl


