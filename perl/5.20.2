#%Module1.0#####################################################################
##
## maui modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tperl - Adds perl to your path"
}

module-whatis	"perl-5.20.2"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

prepend-path    PATH            ${iigb_modules}/perl/5.20.2/bin
prepend-path    MANPATH         ${iigb_modules}/perl/5.20.2/man
prepend-path    PERL5LIB        ${iigb_modules}/perl/5.20.2/lib/5.20.2:${iigb_modules}/perl/5.20.2/lib/site_perl/5.20.2:
setenv          INSTALL_BASE    ${iigb_modules}/perl/5.20.2
conflict        perl

module		use		${modules_dir}

