#%Module1.0#####################################################################
##
## bakta modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tbakta - Adds bakta to your path"
}

module-whatis	"bakta-1.5.1"

set      hpcc_modules    $::env(HPCC_MODULES)

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda activate ${hpcc_modules}/bakta/1.5.1;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}

setenv BAKTA_DB	/srv/projects/db/bakta/4.0
