#%Module1.0#####################################################################
##
## dftbplus modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tdftbplus- Adds dftbplus to your path"
}

module-whatis	"dftbplus-18.2"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

# Python modules were built with miniconda2 (default)
# Hopefully this does not cause issues...
module load miniconda2
module load intel

prepend-path    PATH            ${hpcc_modules}/dftbplus/18.2/bin
prepend-path    PYTHONPATH      ${hpcc_modules}/dftbplus/18.2/lib/python2.7/site-packages

