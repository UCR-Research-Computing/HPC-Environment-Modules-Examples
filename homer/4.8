#%Module1.0#####################################################################
##
## bhomer modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\t - Adds homer software to your environment."
}

module-whatis   "homer-4.8"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set     version         3.2.9
set     prefix          ${modules_dir}/${version}
set     exec_prefix     ${prefix}
set     datarootdir     ${prefix}/share

# Load dependencies
module load blat
module load weblogo

prepend-path    PATH           ${iigb_modules}/homer/4.8/bin

module          use            ${modules_dir}

