#%Module1.0#####################################################################
##
## HALC modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tHALC - Adds HALC pacbio read correction to your path. It depends on BLASR and loredec"
}

module-whatis	"HALC-1.2"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

module load blasr
module load loredec
prepend-path    PATH            ${iigb_modules}/HALC/1.2/bin

module use ${modules_dir}
