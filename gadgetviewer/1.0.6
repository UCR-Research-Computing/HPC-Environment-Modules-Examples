#%Module1.0#####################################################################
##
## gadgetviewer modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tgadgetviewer - Adds gadgetviewer 1.0.6 pdsh 2.29 to your path"
}

module-whatis   "gadgetviewer-1.0.6"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set version     3.2.9
set prefix      ${modules_dir}/${version}
set exec_prefix ${prefix}
set datarootdir ${prefix}/share

prepend-path     PATH               ${hpcc_modules}/pdsh/2.29/bin:${hpcc_modules}/gadgetviewer/1.0.6/bin
prepend-path     LD_LIBRARY_PATH    ${hpcc_modules}/gadgetviewer/1.0.6/lib
prepend-path     MANPATH            ${hpcc_modules}/gadgetviewer/1.0.6/share

