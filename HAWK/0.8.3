# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

module load jellyfish-hawk
module load eigenstrat-hawk
module load ABYSS

prepend-path	PATH	${hpcc_modules}/HAWK/0.8.3/

