#%Module1.0#####################################################################
##
## bioconductor modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tbioconductor- Adds bioconductor to your path"
}

module-whatis	"bioconductor-release_core2_R3.6.1"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

conflict R
module load singularity
setenv          BIOC_CORE2_IMG  ${hpcc_modules}/bioconductor/release_core2_R3.6.1/release_core2_latest.sif
prepend-path    PATH            ${hpcc_modules}/bioconductor/release_core2_R3.6.1/bin

