#%Module1.0#####################################################################
##
## maui modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tviennarna - Adds viennarna to your path"
}

module-whatis	"viennarna-2.1.9"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share


prepend-path    PATH            ${iigb_modules}/viennarna/2.1.9/bin
prepend-path    PERL5LIB        ${iigb_modules}/viennarna/2.1.9/lib64/perl5
prepend-path	CPATH           ${iigb_modules}/viennarna/2.1.9/include
prepend-path    LD_LIBRARY_PATH ${iigb_modules}/viennarna/2.1.9/lib64
prepend-path	LIBRARY_PATH    ${iigb_modules}/viennarna/2.1.9/lib64
prepend-path	MANPATH         ${iigb_modules}/viennarna/2.1.9/share/man

module		use		${modules_dir}

