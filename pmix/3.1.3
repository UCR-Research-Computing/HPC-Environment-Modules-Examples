#%Module1.0#####################################################################
##
## pmix modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tpmix - pmix 4.0.1 compiled against slurm 19.05.0"
}

module-whatis   "pmix-3.1.3"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set     version         3.2.9
set     prefix          ${modules_dir}/${version}
set     exec_prefix     ${prefix}
set     datarootdir     ${prefix}/share

prepend-path    PATH             ${iigb_modules}/pmix/3.1.3/bin
prepend-path    LD_LIBRARY_PATH  ${iigb_modules}/pmix/3.1.3/lib

