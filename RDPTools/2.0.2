#%Module1.0#####################################################################
##
## RDPTools modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\t - Sets RDPTOOLS jar path to your environment"
}

module-whatis   "RDPTools-2.0.2"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set     version         3.2.9
set     prefix          ${modules_dir}/${version}
set     exec_prefix     ${prefix}
set     datarootdir     ${prefix}/share

module load java/8

setenv          RDPTOOLSDIR	${iigb_modules}/RDPTools/2.0.2/lib
setenv          RDPTOOLS	${iigb_modules}/RDPTools/2.0.2
prepend-path    CLASSPATH	${iigb_modules}/RDPTools/2.0.2/lib

# mostly for QIIME 
setenv	RDP_JAR_PATH	${iigb_modules}/RDPTools/2.0.2/lib/classifier.jar
module          use            ${modules_dir}

