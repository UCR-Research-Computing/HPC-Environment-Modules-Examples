#%Module1.0#####################################################################
##
## jellyfish modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tjellyfish - Adds jellyfish to your path"
}

module-whatis   "jellyfish-2.2.6"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set     version         3.2.9
set     prefix          ${modules_dir}/${version}
set     exec_prefix     ${prefix}
set     datarootdir     ${prefix}/share

prepend-path    PATH            ${hpcc_modules}/jellyfish/2.2.6/bin
prepend-path    LD_LIBRARY_PATH ${hpcc_modules}/jellyfish/2.2.6/lib
prepend-path    MANPATH         ${hpcc_modules}/jellyfish/2.2.6/share/man

setenv      PKG_CONFIG_PATH ${hpcc_modules}/jellyfish/2.2.6/lib/pkgconfig

module      use             ${modules_dir}
