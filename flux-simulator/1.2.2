#%Module1.0#####################################################################
##
## flux-simulator modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tflux-simulator- Adds flux-simulator to your path"
}

module-whatis	"flux-simulator-1.2.2"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share


prepend-path    PATH              ${iigb_modules}/flux-simulator/1.2.2/bin
prepend-path    LD_LIBRARY_PATH   ${iigb_modules}/flux-simulator/1.2.2/htslib/lib
prepend-path	MANPATH		  ${iigb_modules}/flux-simulator/1.2.2/share/man

module		use		${modules_dir}

