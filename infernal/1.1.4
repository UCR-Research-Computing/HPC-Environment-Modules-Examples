#%Module1.0#####################################################################
##
## infernal modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tinfernal - Adds infernal to your path"
}

module-whatis   "infernal-1.1.4"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set     version         3.2.9
set     prefix          ${modules_dir}/${version}
set     exec_prefix     ${prefix}
set     datarootdir     ${prefix}/share

prepend-path    PATH            ${hpcc_modules}/infernal/1.1.4/bin
prepend-path    MANPATH		${hpcc_modules}/infernal/1.1.4/share/man

