#%Module1.0#####################################################################
##
## PBX modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tPBX  - Adds pbx tool to your path"
}

module-whatis	"PBX-0.2.2"

set      hpcc_modules    $::env(HPCC_MODULES)

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda activate ${hpcc_modules}/PBX/0.2.2/env;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}

prepend-path	PATH	${hpcc_modules}/PBX/0.2.2/pbx
