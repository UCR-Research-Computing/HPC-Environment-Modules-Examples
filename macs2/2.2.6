#%Module1.0#####################################################################
##
## macs2 modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tmacs2- Adds macs2 to your path"
}

module-whatis	"macs2-2.2.6"

set      hpcc_modules    $::env(HPCC_MODULES)

# Load miniconda
module load miniconda3

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda activate ${hpcc_modules}/macs2/2.2.6;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}

# RStudio need PATH to be explicitly set
append-path    PATH    ${hpcc_modules}/macs2/2.2.6/bin

