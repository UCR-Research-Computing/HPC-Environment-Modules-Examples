#%Module1.0#####################################################################
##
## cuda modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tcuda - Adds cuda version 10.2.2 to your path"
}

module-whatis	"cuda-10.2.2"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share


prepend-path    PATH              ${hpcc_modules}/cuda/10.2.2/bin:${hpcc_modules}/cuda/10.2.2/nvvm/bin
prepend-path    LD_LIBRARY_PATH   ${hpcc_modules}/cuda/10.2.2/lib64:${hpcc_modules}/cuda/10.2.2/nvvm/lib64:${hpcc_modules}/cuda/10.2.2/targets/x86_64-linux/lib/
setenv          CUDA_HOME         ${hpcc_modules}/cuda/10.2.2
