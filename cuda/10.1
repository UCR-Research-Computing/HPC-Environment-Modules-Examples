#%Module1.0#####################################################################
##
## cuda modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tcuda - Adds cuda version 10.1 to your path"
}

module-whatis	"cuda-10.1"

set      hpcc_modules    $::env(HPCC_MODULES)

prepend-path    PATH              /opt/linux/rhel/8.x/x86_64/pkgs/cuda/10.1/bin:/opt/linux/rhel/8.x/x86_64/pkgs/cuda/10.1/nvvm/bin
prepend-path    LD_LIBRARY_PATH   /opt/linux/rhel/8.x/x86_64/pkgs/cuda/10.1/lib64:/opt/linux/rhel/8.x/x86_64/pkgs/cuda/10.1/nvvm/lib64:/opt/linux/rhel/8.x/x86_64/pkgs/cuda/10.1/targets/x86_64-linux/lib/
setenv          CUDA_HOME         /opt/linux/rhel/8.x/x86_64/pkgs/cuda/10.1
setenv          CUDA_PATH         /opt/linux/rhel/8.x/x86_64/pkgs/cuda/10.1

