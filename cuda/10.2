#%Module1.0#####################################################################
##
## cuda modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tcuda - Adds cuda version 10.2 to your path"
}

module-whatis	"cuda-10.2"

set      hpcc_modules    $::env(HPCC_MODULES)

prepend-path    PATH              /opt/linux/rhel/8.x/x86_64/pkgs/cuda/10.2/bin:/opt/linux/rhel/8.x/x86_64/pkgs/cuda/10.2/nvvm/bin
prepend-path    LD_LIBRARY_PATH   /opt/linux/rhel/8.x/x86_64/pkgs/cuda/10.2/lib64:/opt/linux/rhel/8.x/x86_64/pkgs/cuda/10.2/nvvm/lib64:/opt/linux/rhel/8.x/x86_64/pkgs/cuda/10.2/targets/x86_64-linux/lib/
setenv          CUDA_HOME         /opt/linux/rhel/8.x/x86_64/pkgs/cuda/10.2
setenv          CUDA_PATH         /opt/linux/rhel/8.x/x86_64/pkgs/cuda/10.2

