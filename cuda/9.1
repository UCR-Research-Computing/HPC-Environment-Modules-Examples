#%Module1.0#####################################################################
##
## cuda modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tcuda - Adds cuda version 9.1 to your path"
}

module-whatis	"cuda-9.1"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share


prepend-path    PATH              /opt/linux/centos/7.x/x86_64/pkgs/cuda/9.1/bin:/opt/linux/centos/7.x/x86_64/pkgs/cuda/9.1/nvvm/bin
prepend-path    LD_LIBRARY_PATH   /opt/linux/centos/7.x/x86_64/pkgs/cuda/9.1/lib64:/opt/linux/centos/7.x/x86_64/pkgs/cuda/9.1/nvvm/lib64
setenv          CUDA_HOME         /opt/linux/centos/7.x/x86_64/pkgs/cuda/9.1

module		use		${modules_dir}

