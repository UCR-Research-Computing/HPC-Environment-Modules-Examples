#%Module1.0#####################################################################
##
## maui modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tchlorop - Adds chlorop to your path"
}

module-whatis	"chlorop-1.1"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

module      load    perl

prepend-path    PATH            ${iigb_modules}/chlorop/1.1/bin
prepend-path    PERL5LIB        ${iigb_modules}/chlorop/1.1/lib

module		use		${modules_dir}

