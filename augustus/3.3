#%Module1.0#####################################################################
##
## augustus modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\taugustus - Adds AUGUSTUS to your path"
}

module-whatis	"augustus-3.3"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

module load lp_solve
# needed for braker steps
module load bamtools 

prepend-path    PATH                    ${hpcc_modules}/augustus/3.3/bin:${hpcc_modules}/augustus/3.3/scripts
setenv          AUGUSTUS_CONFIG_PATH    ${hpcc_modules}/augustus/3.3/config

module  use     ${modules_dir}

