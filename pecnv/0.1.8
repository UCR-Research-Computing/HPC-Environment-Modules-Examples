#%Module1.0#####################################################################
##
## pecnv modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tpecnv - Adds pecnv to your path"
}

module-whatis	"pecnv-0.1.8"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

prepend-path    PATH            ${hpcc_modules}/pecnv/0.1.8/bin
prepend-path	MANPATH		${hpcc_modules}/pecnv/0.1.8/share/man
prepend-path	LD_RUN_PATH	${hpcc_modules}/libsequence/1.8.5/lib
module		use		${modules_dir}
module load htslib
module load libsequence
