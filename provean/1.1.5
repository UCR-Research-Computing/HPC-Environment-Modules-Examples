#%Module1.0#####################################################################
##
## provean modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\t - Adds provean 1.1.5 to your path"
}

module-whatis   "provean-1.1.5"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set     version         3.2.9
set     prefix          ${modules_dir}/${version}
set     exec_prefix     ${prefix}
set     datarootdir     ${prefix}/share

prepend-path    PATH            ${iigb_modules}/provean/1.1.5/bin
prepend-path    MANPATH         ${iigb_modules}/provean/1.1.5/share/doc

module          use             ${modules_dir}

