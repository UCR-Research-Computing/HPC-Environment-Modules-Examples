#%Module1.0#####################################################################
##
## SALSA modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\t SALSA - Adds SALSA tools for HiC scaffolding to your path"
}

module-whatis   "SALSA-2.3"

set      hpcc_modules    $::env(HPCC_MODULES)

module load boost
module load miniconda3

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda activate ${hpcc_modules}/SALSA/2.3/env;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}

prepend-path    PATH    ${hpcc_modules}/SALSA/2.3/bin

