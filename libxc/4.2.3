#%Module1.0#####################################################################
##
## libxc modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tlibxc- Adds libxc to your path"
}

module-whatis	"libxc-4.2.3"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

prepend-path    PATH             ${iigb_modules}/libxc/4.2.3/bin
prepend-path    LD_LIBRARY_PATH  ${iigb_modules}/libxc/4.2.3/lib
prepend-path    C_LIBRARY_PATH   ${iigb_modules}/libxc/4.2.3/include

