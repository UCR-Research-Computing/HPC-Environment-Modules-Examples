#%Module1.0#####################################################################
##
## julia modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tjulia- Adds julia to your path"
}

module-whatis	"julia-1.0.5"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

prepend-path    PATH             ${hpcc_modules}/julia/1.0.5/bin
prepend-path    LD_LIBRARY_PATH  ${hpcc_modules}/julia/1.0.5/lib
prepend-path    MANPATH          ${hpcc_modules}/julia/1.0.5/share/man
prepend-path    C_INCLUDE        ${hpcc_modules}/julia/1.0.5/include
prepend-path    INCLUDE_PATH     ${hpcc_modules}/julia/1.0.5/include

