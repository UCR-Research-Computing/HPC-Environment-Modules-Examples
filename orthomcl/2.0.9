#%Module1.0#####################################################################
##
## OrthoMCL modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\torthomcl - Adds OrthoMCL to your path"
}

module-whatis	"orthomcl-2.0.9"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share


prepend-path    PATH            ${hpcc_modules}/orthomcl/2.0.9/bin
prepend-path    PERL5LIB        ${hpcc_modules}/orthomcl/2.0.9/lib/perl

module		use		${modules_dir}

