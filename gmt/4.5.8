#%Module1.0#####################################################################
##
## gmt modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tgmt- Adds gmt to your path"
}

module-whatis	"gmt-4.5.8"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

prepend-path    PATH            ${hpcc_modules}/gmt/4.5.8/bin
prepend-path    C_INCLUDE_PATH  ${hpcc_modules}/gmt/4.5.8/include
prepend-path    LD_LIBRARY_PATH ${hpcc_modules}/gmt/4.5.8/lib
prepend-path    MANPATH         ${hpcc_modules}/gmt/4.5.8/share/man

