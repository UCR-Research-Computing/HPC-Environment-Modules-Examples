#%Module1.0#####################################################################
##
## gmt modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tgmt- Adds gmt to your path"
}

module-whatis	"gmt-4.5.8"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

module load netcdf
module load octave

prepend-path    PATH            ${iigb_modules}/gmt/4.5.8/bin
prepend-path    C_INCLUDE_PATH  ${iigb_modules}/gmt/4.5.8/include
prepend-path    LD_LIBRARY_PATH ${iigb_modules}/gmt/4.5.8/lib

module use ${modules_dir}
