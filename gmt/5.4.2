#%Module1.0#####################################################################
##
## gmt modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tgmt- Adds gmt to your path"
}

module-whatis	"gmt-5.4.2"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

prepend-path    PATH              ${hpcc_modules}/gmt/5.4.2/bin
prepend-path    LD_LIBRARY_PATH   ${hpcc_modules}/gmt/5.4.2/lib64
prepend-path	MANPATH		      ${hpcc_modules}/gmt/5.4.2/share/man


