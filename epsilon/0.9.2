#%Module1.0#####################################################################
##
## epsilon modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tepsilon - Adds epsilon to your path"
}

module-whatis	"epsilon-0.9.2"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

prepend-path    PATH                ${hpcc_modules}/epsilon/0.9.2/bin
prepend-path    CPATH               ${hpcc_modules}/epsilon/0.9.2/include
prepend-path    LD_LIBRARY_PATH     ${hpcc_modules}/epsilon/0.9.2/lib
prepend-path    LIBRARY_PATH        ${hpcc_modules}/epsilon/0.9.2/lib

