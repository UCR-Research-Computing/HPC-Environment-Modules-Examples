#%Module1.0#####################################################################
##
## AAFTF modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tAAFTF - Adds AAFTF to your path"
}

module-whatis	"AAFTF-0.2.3"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

module load trimmomatic/0.36
module unload miniconda2
#  this will load python3
module load miniconda3 
module load bwa/0.7.17
module load bowtie2/2.3.4.1
module load samtools/1.9
module load SPAdes/3.13.1
module load ncbi-blast/2.7.1+
module load diamond/0.9.24
module load minimap2/2.17
module load pilon/1.22
module load BBMap/38.16

setenv	AAFTF_DB	/bigdata/operations/pkgadmin/srv/projects/db/AAFTF_DB
prepend-path    PATH            ${iigb_modules}/AAFTF/0.2.3/scripts

module use ${modules_dir}
