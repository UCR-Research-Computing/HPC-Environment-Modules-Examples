set     datarootdir     ${prefix}/share

prepend-path    PATH            ${iigb_modules}/R/2.15.3/bin
prepend-path    MANPATH         ${iigb_modules}/R/2.15.3/share/man
prepend-path    CPATH           ${iigb_modules}/R/2.15.3/lib64/R/include
prepend-path    LIBRARY_PATH    ${iigb_modules}/R/2.15.3/lib64/R/lib
prepend-path    LD_LIBRARY_PATH ${iigb_modules}/R/2.15.3/lib64/R/lib

module          load            ggobi
module          use             ${modules_dir}

