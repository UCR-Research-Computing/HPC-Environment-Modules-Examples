#%Module1.0#####################################################################
##
## autometa modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tautometa - Adds autometa tools to your path"
}

module-whatis	"autometa-git-live"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

module load samtools/1.10
module load diamond
module load hmmer/3
module load bowtie2
module load bedtools
module load prodigal

module unload miniconda2
module unload anaconda3
module load miniconda3

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module unload anaconda3; module unload miniconda2; module load miniconda3; source activate autometa;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "source deactivate;"
}
prepend-path    PATH            ${hpcc_modules}/autometa/git-live/pipeline

module use ${modules_dir}
