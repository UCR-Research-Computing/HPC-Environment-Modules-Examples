#%Module1.0#####################################################################
##
## Picard modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\t - Sets RNA-SeQC to your environment"
}

module-whatis   "RNA-SeQC-1.1.8"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set     version         3.2.9
set     prefix          ${modules_dir}/${version}
set     exec_prefix     ${prefix}
set     datarootdir     ${prefix}/share

module load java

prepend-path    PATH           ${hpcc_modules}/rna-seqc/1.1.8/bin
setenv          RNASEQC        ${hpcc_modules}/rna-seqc/1.1.8/lib/rna-seqc.jar
setenv          RNASEQC_LIB    ${hpcc_modules}/rna-seqc/1.1.8/lib
prepend-path    CLASSPATH      ${hpcc_modules}/rna-seqc/1.1.8/lib

module          use            ${modules_dir}

