#%Module1.0#####################################################################
##
## RiboTaper modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tRiboTaper - Adds RiboTaper 1.3.1 to your path"
}

module-whatis   "ribotaper-1.3.1"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set     version         3.2.9
set     prefix          ${modules_dir}/${version}
set     exec_prefix     ${prefix}
set     datarootdir     ${prefix}/share

prepend-path    PATH            ${hpcc_modules}/ribotaper/1.3.1/bin


