#%Module1.0#####################################################################
##
## maui modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tvelvetoptimiser - Adds velvetoptimiser to your path"
}

module-whatis	"velvetoptimiser-2.2.5"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

module unload perl
module load perl/5.24.0
module load velvet

prepend-path    PATH            ${hpcc_modules}/velvetoptimiser/2.2.5

module		use		${modules_dir}

