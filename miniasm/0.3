#%Module1.0#####################################################################
##
## miniasm modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tminiasm - Adds miniasm and minidot to your path"
}

module-whatis	"miniasm-0.3"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share


prepend-path    PATH            ${hpcc_modules}/miniasm/0.3/bin
prepend-path    MANPATH         ${hpcc_modules}/miniasm/0.3/share/man

module		use		${modules_dir}

