#%Module1.0#####################################################################
##
## TransDecoder modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\ttransdecoder - Adds transdecoder to your path"
}

module-whatis   "transdecoder-5.0.2"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set     version         3.2.9
set     prefix          ${modules_dir}/${version}
set     exec_prefix     ${prefix}
set     datarootdir     ${prefix}/share

prepend-path    PATH            ${iigb_modules}/transdecoder/5.0.2:${iigb_modules}/transdecoder/5.0.2/util:${iigb_modules}/transdecoder/5.0.2/util/bin
prepend-path    PERL5LIB        ${iigb_modules}/transdecoder/5.0.2/PerlLib

module          use             ${modules_dir}
