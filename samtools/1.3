#%Module1.0#####################################################################
##
## samtools modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tsamtools- Adds samtools to your path"
}

module-whatis	"samtools-1.3"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share


prepend-path    PATH              ${hpcc_modules}/samtools/1.3/bin
prepend-path    LD_LIBRARY_PATH   ${hpcc_modules}/samtools/1.3/htslib/lib
prepend-path	MANPATH		  ${hpcc_modules}/samtools/1.3/share/man
setenv	SAMTOOLS_PATH	${hpcc_modules}/samtools/1.3/bin
module		use		${modules_dir}

