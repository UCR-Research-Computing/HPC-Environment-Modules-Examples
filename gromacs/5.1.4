#%Module1.0#####################################################################
##
## gromacs modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tgromacs - Adds gromacs 5.1.4 to your path"
}

module-whatis   "gromacs-5.1.4"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set version     3.2.9
set prefix      ${modules_dir}/${version}
set exec_prefix ${prefix}
set datarootdir ${prefix}/share

module load cuda
prereq cuda

prepend-path     C_INCLUDE_PATH     ${iigb_modules}/gromacs/5.1.4/include
prepend-path     CPLUS_INCLUDE_PATH ${iigb_modules}/gromacs/5.1.4/include
prepend-path     LIBRARY_PATH       ${iigb_modules}/gromacs/5.1.4/lib64
prepend-path     PATH               ${iigb_modules}/gromacs/5.1.4/bin
prepend-path     LD_LIBRARY_PATH    ${iigb_modules}/gromacs/5.1.4/lib64
prepend-path     MANPATH            ${iigb_modules}/gromacs/5.1.4/share/man

module           use      ${modules_dir}
