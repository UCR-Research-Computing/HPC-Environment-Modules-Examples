#%Module1.0#####################################################################
##
## maui modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tmaui - Adds maui to your path"
}

module-whatis	"maui-3.3.1"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

# Setup xband to use home dir so that a TclIndex file can be created
if {![info exists ~/.xband]} {
    mkdir ~/.xband
    ln -s ${iigb_modules}/xband/6.3/* ~/.xband/
fi

setenv          XBANDPATH   ~/.xband
prepend-path    PATH   		${XBANDPATH}

module		use		${modules_dir}

