#%Module1.0#####################################################################
##
## clipKIT modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tclipkit - Adds clipkt to your path"
}

module-whatis	"clipkit-0.1"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

module unload miniconda2
module unload miniconda3
module load anaconda3

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module unload miniconda3; module unload miniconda2; module load anaconda3; source activate clipkit;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}
prepend-path    PATH    ${hpcc_modules}/anaconda3/4.5.4/envs/clipkit/bin

module		use		${modules_dir}
