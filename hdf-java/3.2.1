#%Module1.0#####################################################################
##
## hdf-java modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\thdf-java - Adds hdf-java to your path"
}

module-whatis	"hdf-java-3.2.1"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

prepend-path    CLASSPATH       ${hpcc_modules}/hdf-java/3.2.1/lib
prepend-path    LD_LIBRARY_PATH ${hpcc_modules}/hdf-java/3.2.1/lib

module use ${modules_dir}
