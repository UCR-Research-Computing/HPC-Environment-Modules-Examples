#%Module1.0#####################################################################
##
## repet modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\trepet - Adds repet to your path"
}

module-whatis	"repet-2.5"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

module load RECON
module load hmmer
module load ncbi-blast
module load censor
module load RepeatMasker
module load trf
module load genometools
module load miniconda3
source activate repet

prepend-path PATH ${iigb_modules}/repet/2.5/bin
prepend-path PYTHONPATH ${iigb_modules}/repet/2.5
setenv REPET_PATH ${iigb_modules}/repet/2.5

module use ${modules_dir}
