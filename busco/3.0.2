#%Module1.0#####################################################################
##
## BUSCO modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tbusco - Adds BUSCO 3.0.2 to your path"
}

module-whatis	"busco-3.0.2"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

module load python/3.6.0
module load ncbi-blast/2.7.1+
module load hmmer/3.1b2
module load augustus/3.3

prepend-path    PATH                ${hpcc_modules}/busco/3.0.2/scripts/
setenv          BUSCO_CONFIG_FILE   ${hpcc_modules}/busco/3.0.2/config/config.ini
setenv          BUSCO_LINEAGES      /srv/projects/db/BUSCO/v9/

module use ${modules_dir}
