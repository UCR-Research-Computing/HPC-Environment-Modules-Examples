#%Module1.0#####################################################################
##
## BUSCO modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tbusco - Adds BUSCO 4.0.5 to your path"
}

module-whatis	"busco-4.0.5"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

module unload python miniconda2 miniconda3 anaconda2 anaconda3
module load miniconda3
module load ncbi-blast/2.9.0+
module load hmmer/3.2.1
module load augustus/3.3.3
module load prodigal/2.6.3
module load R/3.6.0

# Sepp was installed under busco directory
prepend-path    PATH                ${hpcc_modules}/busco/4.0.5/scripts:${hpcc_modules}/busco/4.0.5/bin
setenv          BUSCO_CONFIG_FILE   ${hpcc_modules}/busco/4.0.5/config/config.ini
setenv          BUSCO_LINEAGES      /srv/projects/db/BUSCO/v10
prepend-path    PYTHONPATH          ${hpcc_modules}/busco/4.0.5/lib/python3.6/site-packages


