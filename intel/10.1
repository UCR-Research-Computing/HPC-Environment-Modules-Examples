#%Module1.0#####################################################################
##
## intel modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tintel - Adds ifort and libs to your path"
}

module-whatis	"intel-10"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share


prepend-path    PATH   		       ${hpcc_modules}/intel/fce/10.1.015/bin:${hpcc_modules}/intel/cce/10.1.015/bin
prepend-path    LD_LIBRARY_PATH    ${hpcc_modules}/intel/fce/10.1.015/lib:${hpcc_modules}/intel/cce/10.1.015/lib:${hpcc_modules}/intel/mkl/10.0.3.020/lib/intel64:
prepend-path    DYLD_LIBRARY_PATH  ${hpcc_modules}/intel/fce/10.1.015/lib
prepend-path    NLSPATH            ${hpcc_modules}/intel/fce/10.1.015/lib/locale/en_US
prepend-path    MANPATH            ${hpcc_modules}/intel/fce/10.1.015/man
prepend-path    INTEL_LICENSE_FILE ${hpcc_modules}/intel/fce/10.1.015/licenses:${hpcc_modules}/intel/licenses
setenv          MKL_ROOT           ${hpcc_modules}/intel/mkl/10.0.3.020
setenv          MKLROOT           ${hpcc_modules}/intel/mkl/10.0.3.020


