#%Module1.0#####################################################################
##
## timetree modulefile
#
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\ttimetree - Adds timetree to your path"
}

module-whatis	"timetree-0.7.6"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

module unload miniconda2
module unload miniconda3
module load anaconda3

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module unload miniconda3 miniconda2; module load anaconda3; source activate timetree;"
    puts "source activate timetree;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "module unload miniconda3 miniconda2; module load anaconda3; conda deactivate;"
}

module use ${modules_dir}
