#%Module1.0#####################################################################
##
## aTRAM modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\taTRAM - Adds aTRAM 2.0 to your path"
}

module-whatis	"atram-2.3.1"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

# All python versions need to be unloaded
conflict    python
# assume biopython and numpy are installed otherwise we will need a specific conda env
module load miniconda3
module load ncbi-blast/2.9.0+
module load exonerate/2.4.0
module load SPAdes/3.14.1
module load ABYSS/2.2.1
module load trinity-rnaseq/2.11.0
module load velvet
module load bwa

setenv	ATRAM_PATH	${hpcc_modules}/aTRAM/2.3.1
prepend-path	PATH	${hpcc_modules}/aTRAM/2.3.1
module		use		${modules_dir}
