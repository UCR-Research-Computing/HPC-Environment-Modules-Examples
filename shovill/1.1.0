#%Module1.0#####################################################################
##
## shovill modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tshovill - Adds shovill to your path"
}

module-whatis	"shovill-1.1.0"


set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share


# Unload miniconda
module unload miniconda2
module unload anaconda3
module unload python

conflict    python

module load miniconda3
setenv LC_ALL en_US.utf-8
setenv LANG en_US.utf-8

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module unload anaconda3 miniconda2; module load miniconda3; source activate shovill;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "module unload anaconda3 miniconda2; module load miniconda3; conda deactivate;"
}

# Add path manually, since source activate does not function within parent shell
prepend-path    PATH    ${hpcc_modules}/miniconda3/4.3.31/envs/shovill/bin

