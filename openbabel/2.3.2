#%Module1.0#####################################################################
##
## OpenBabel modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tOpen Babel- Adds OpenBabel 2.3.2 to your path"
}

module-whatis   "openbabel-2.3.2"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set version     3.2.9
set prefix      ${modules_dir}/${version}
set exec_prefix ${prefix}
set datarootdir ${prefix}/share

#module load boost/1.51.0
#prereq           boost/1.51.0
module load python/2.7.5
prereq           python/2.7.5

setenv           BABEL_DATADIR      ${hpcc_modules}/openbabel/2.3.2/share/openbabel/2.3.2
setenv           BABEL_LIBDIR       ${hpcc_modules}/openbabel/2.3.2/lib/openbabel/2.3.2
prepend-path     C_INCLUDE_PATH     ${hpcc_modules}/openbabel/2.3.2/include
prepend-path     CPLUS_INCLUDE_PATH ${hpcc_modules}/openbabel/2.3.2/include
prepend-path     LIBRARY_PATH       ${hpcc_modules}/openbabel/2.3.2/lib
prepend-path     PATH               ${hpcc_modules}/openbabel/2.3.2/bin
prepend-path     LD_LIBRARY_PATH    ${hpcc_modules}/openbabel/2.3.2/lib
prepend-path     MANPATH            ${hpcc_modules}/openbabel/2.3.2/share/man
prepend-path     PYTHONPATH         ${hpcc_modules}/openbabel/2.3.2/lib
prepend-path     CLASSPATH          ${hpcc_modules}/openbabel/2.3.2/lib/openbabel.jar

module           use      ${modules_dir}
