##
## stajichlab-perl modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tstajichlab-perl - Adds Stajich Lab Perl Modules to your path"
}

module-whatis	"stajichlab-perl-2012-01"

# for Tcl script use only
set	version		3.2.9
set	prefix		/usr/local/Modules/3.2.9
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share


prepend-path    PATH   		/opt/stajichlab/stajichlab-perl/bin
prepend-path	PERL5LIB	/opt/stajichlab/stajichlab-perl/lib/perl5
prepend-path	MANPATH		/opt/stajichlab/stajichlab-perl/man

module		use		/usr/local/Modules/versions
