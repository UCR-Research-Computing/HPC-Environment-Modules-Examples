#%Module1.0#####################################################################
##
## amptk modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tamptk - Adds amptk (formerly ufits) ITS pipeline to your path"
}

module-whatis	"amptk-1.4.0"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

module load miniconda2
module load usearch/9.1.13_i86linux32
module load ITSx
module load hmmer
module load fastx_toolkit
module load vsearch
module load samtools/1.9
module load bedtools

setenv LC_ALL en_US.utf-8
setenv LANG en_US.utf-8

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda2/4.4.10; source activate amptk;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}
# Add path manually, since source activate does not function within parent shell
prepend-path    PATH    ${iigb_modules}/miniconda2/4.4.10/envs/amptk/bin

module		use		${modules_dir}
