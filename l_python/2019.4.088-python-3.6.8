#%Module1.0#####################################################################
##
## Intel Python modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tIntel Python - Adds Intel Python 3.6.8 to your path"
}

module-whatis	"l_python-3.6.8"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set     prefix          ${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

prepend-path    PATH   		    ${hpcc_modules}/l_python/2019.4.088/intelpython3/bin
prepend-path    CPATH           ${hpcc_modules}/l_python/2019.4.088/intelpython3/include
prepend-path    LD_LIBRARY_PATH ${hpcc_modules}/l_python/2019.4.088/intelpython3/lib
prepend-path    MANPATH         ${hpcc_modules}/l_python/2019.4.088/intelpython3/share/man
