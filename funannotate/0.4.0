#%Module1.0#####################################################################
##
## funannotate modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tfunannotate - Adds funannotate to your path"
}

module-whatis	"funannotate-0.4.0"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

prereq  python/2.7.5
prereq  perl/5.20.2

module  load    RepeatMasker/4-0-6
module  load    augustus/3.2.2
module  load    EVM/1.1.1
module  load    genemarkESET
module  load    bamtools
module  load    ncbi-blast
module  load    hmmer
module  load    RepeatModeler
module  load    gmap
module  load    bedtools
module  load    tbl2asn
module  load    braker
module  load    mummer
module  load    RAxML
module  load    mafft
module  load    trimal

prepend-path    PATH        ${iigb_modules}/funannotate/0.4.0
prepend-path    PATH        ${iigb_modules}/funannotate/0.4.0/bin

module  use     ${modules_dir}
