#%Module1.0#####################################################################
##
## ghc modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tghc- Adds ghc to your path"
}

module-whatis	"ghc-7.6.3"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share


prepend-path    PATH              ${hpcc_modules}/ghc/7.6.3/bin
prepend-path    LD_LIBRARY_PATH   ${hpcc_modules}/ghc/7.6.3/lib
prepend-path	MANPATH		      ${hpcc_modules}/ghc/7.6.3/share/man
setenv          GHC               ${hpcc_modules}/ghc/7.6.3/

module		use		${modules_dir}

