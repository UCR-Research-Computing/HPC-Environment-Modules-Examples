#%Module1.0#####################################################################
##
## arcs and links modulefile
#
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tarcs & links - Adds arcs and links assembly tools to your path"
}

module-whatis	"arcs-1.2.3"

set      hpcc_modules    $::env(HPCC_MODULES)

module load seqtk
module load abyss

if { [module-info mode load] || [module-info mode switch2] } {
     puts stdout "module load miniconda3; conda activate ${hpcc_modules}/arcs/1.2.3/env;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}

prepend-path	PATH	${hpcc_modules}/arcs/1.2.2/bin
