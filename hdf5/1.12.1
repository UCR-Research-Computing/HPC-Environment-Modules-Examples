#%Module1.0#####################################################################
##
## hdf5 modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\thdf5 - Adds hdf5 to your path"
}

module-whatis	"hdf5-1.12.1"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

prepend-path    PATH                 ${hpcc_modules}/hdf5/1.12.1/bin
prepend-path    INCLUDE_PATH         ${hpcc_modules}/hdf5/1.12.1/include
prepend-path    C_INCLUDE_PATH       ${hpcc_modules}/hdf5/1.12.1/include
prepend-path    CPLUS_INCLUDE_PATH   ${hpcc_modules}/hdf5/1.12.1/include
prepend-path    LD_LIBRARY_PATH      ${hpcc_modules}/hdf5/1.12.1/lib

