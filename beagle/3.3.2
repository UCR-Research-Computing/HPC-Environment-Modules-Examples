#%Module1.0#####################################################################
##
## beagle modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\t - Sets beagle to your environment"
}

module-whatis   "beagle-3.3.2"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set     version         3.2.9
set     prefix          ${modules_dir}/${version}
set     exec_prefix     ${prefix}
set     datarootdir     ${prefix}/share

module load java

prepend-path    PATH           ${iigb_modules}/beagle/3.3.2/bin
setenv          beagle          ${iigb_modules}/beagle/3.3.2/lib/beagle.jar
setenv          beagle_LIB      ${iigb_modules}/beagle/3.3.2/lib
prepend-path    CLASSPATH      ${iigb_modules}/beagle/3.3.2/lib

module          use            ${modules_dir}

