#%Module1.0#####################################################################
##
## beagle modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\t - Sets beagle to your environment"
}

module-whatis   "beagle-3.3.2"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set     version         3.2.9
set     prefix          ${modules_dir}/${version}
set     exec_prefix     ${prefix}
set     datarootdir     ${prefix}/share

module load java/7u40
prereq java/7u40

prepend-path    PATH           ${hpcc_modules}/beagle/3.3.2/bin
setenv          beagle          ${hpcc_modules}/beagle/3.3.2/lib/beagle.jar
setenv          beagle_LIB      ${hpcc_modules}/beagle/3.3.2/lib
prepend-path    CLASSPATH      ${hpcc_modules}/beagle/3.3.2/lib


