#%Module1.0#####################################################################
##
## beagle modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\t - Sets beagle to your environment"
}

module-whatis   "beagle-5.1"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set     version         3.2.9
set     prefix          ${modules_dir}/${version}
set     exec_prefix     ${prefix}
set     datarootdir     ${prefix}/share

# Unload java
conflict    java
module unload java
module load java/8

prepend-path    PATH           ${hpcc_modules}/beagle/5.1/bin
setenv          beagle         ${hpcc_modules}/beagle/5.1/lib/beagle.18May20.d20.jar
setenv          beagle_LIB     ${hpcc_modules}/beagle/5.1/lib
prepend-path    CLASSPATH      ${hpcc_modules}/beagle/5.1/lib

