#%Module1.0#####################################################################
##
## beagle modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\t - Sets beagle to your environment"
}

module-whatis   "beagle-4.1"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set     version         3.2.9
set     prefix          ${modules_dir}/${version}
set     exec_prefix     ${prefix}
set     datarootdir     ${prefix}/share

# Unload java
conflict    java
module unload java
module load java/8

prepend-path    PATH           ${iigb_modules}/beagle/4.1/bin
setenv          beagle          ${iigb_modules}/beagle/4.1/lib/beagle.23Jul16.fb0.jar
setenv          beagle_LIB      ${iigb_modules}/beagle/4.1/lib
prepend-path    CLASSPATH      ${iigb_modules}/beagle/4.1/lib

module          use            ${modules_dir}

