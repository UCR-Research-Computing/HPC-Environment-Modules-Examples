#%Module1.0#####################################################################
##
## libfabric modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tlibfabric- Adds libfabric to your path"
}

module-whatis	"libfabric-1.9.1"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

# Compiled with intel/2018, but not required
#prereq intel/2018

prepend-path    PATH              ${hpcc_modules}/libfabric/1.9.1/bin
prepend-path    LD_LIBRARY_PATH   ${hpcc_modules}/libfabric/1.9.1/lib
prepend-path    MANPATH           ${hpcc_modules}/libfabric/1.9.1/share/man

