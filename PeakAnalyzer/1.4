#%Module1.0#####################################################################
##
## PeakAnalyzer modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\t - Sets PeakAnalyzer to your environment"
}

module-whatis   "PeakAnalyzer-1.4"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set     version         3.2.9
set     prefix          ${modules_dir}/${version}
set     exec_prefix     ${prefix}
set     datarootdir     ${prefix}/share

module load java
setenv          PEAKANALYZER       ${iigb_modules}/PeakAnalyzer/1.4/PeakAnalyzer.jar
setenv          PEAKANALYZERGUI    ${iigb_modules}/PeakAnalyzer/1.4/PeakAnalyzerGUI.jar
setenv          PEAKANALYZERDIR    ${iigb_modules}/PeakAnalyzer/1.4/
prepend-path    CLASSPATH          ${iigb_modules}/PeakAnalyzer/1.4/

module          use            ${modules_dir}

