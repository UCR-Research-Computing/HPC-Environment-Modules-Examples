#%Module1.0#####################################################################
##
## mirdeep modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tmirdeep- Adds mirdeep to your path"
}

module-whatis	"mirdeep-2.0.0.8"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share


prepend-path    PATH              ${hpcc_modules}/mirdeep/2.0.0.8/bin
prepend-path	PERL_MB_OPT		  "--install_base ${hpcc_modules}/mirdeep/2.0.0.8/lib/perl5"
prepend-path	PERL_MM_OPT		  "INSTALL_BASE=${hpcc_modules}/mirdeep/2.0.0.8/lib/perl5"
prepend-path	PERL5LIB		  ${hpcc_modules}/mirdeep/2.0.0.8/lib/perl5


