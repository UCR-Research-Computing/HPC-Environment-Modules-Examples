#%Module1.0#####################################################################
##
## masurca modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tmasurca - Adds masurca (non-conda) to your path"
}

module-whatis	"masurca-3.3.8"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

# All python versions need to be unloaded
prereq perl/5.24.0
module load perl/5.24.0

# Set character encoding
setenv LC_ALL en_US.utf-8
setenv LANG en_US.utf-8

# Add path manually, since source activate does not function within parent shell
module load parallel
module load boost
module load bwa
module load freebayes
prepend-path    PATH            ${hpcc_modules}/MaSuRCA/3.3.8/bin
prepend-path    PATH            ${hpcc_modules}/MaSuRCA/3.3.8/CA8/Linux-amd64/bin:${hpcc_modules}/MaSuRCA/3.3.8/Flye/bin
prepend-path	LD_RUN_PATH	${hpcc_modules}/MaSuRCA/3.3.8/lib:${hpcc_modules}/MaSuRCA/3.3.8/lib/perl
prepend-path	LD_LIBRARY_PATH	${hpcc_modules}/MaSuRCA/3.3.8/lib:${hpcc_modules}/MaSuRCA/3.3.8/lib/perl

