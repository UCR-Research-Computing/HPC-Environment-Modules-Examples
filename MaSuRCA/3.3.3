#%Module1.0#####################################################################
##
## masurca modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tmasurca - Adds masurca (non-conda) to your path"
}

module-whatis	"masurca-3.3.3"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

# All python versions need to be unloaded
#conflict    python
#conflict    anaconda
#conflict    miniconda

# Load miniconda
#module load miniconda3/4.3.31

# Set character encoding
setenv LC_ALL en_US.utf-8
setenv LANG en_US.utf-8

#if { [module-info mode load] || [module-info mode switch2] } {
#    puts stdout "module load miniconda3/4.3.31; source activate masurca;"
#} elseif { [module-info mode remove] && ![module-info mode switch3] } {
#    puts stdout "conda deactivate;"
#}

# Add path manually, since source activate does not function within parent shell
#prepend-path    PATH    ${hpcc_modules}/miniconda3/4.3.31/envs/masurca/bin
module load parallel
module load boost
prepend-path    PATH            ${hpcc_modules}/MaSuRCA/3.3.3/bin
prepend-path    PATH            ${hpcc_modules}/MaSuRCA/3.3.3/CA8/Linux-amd64/bin:${hpcc_modules}/MaSuRCA/3.3.3/Flye/bin
prepend-path	LD_RUN_PATH	${hpcc_modules}/MaSuRCA/3.3.3/lib:${hpcc_modules}/MaSuRCA/3.3.3/lib/perl
prepend-path	LD_LIBRARY_PATH	${hpcc_modules}/MaSuRCA/3.3.3/lib:${hpcc_modules}/MaSuRCA/3.3.3/lib/perl

module		use		${modules_dir}
