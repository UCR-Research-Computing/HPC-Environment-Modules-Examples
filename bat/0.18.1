#%Module1.0#####################################################################
##
## bat modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tbat - Adds bat (cat alternative) to your path"
}

module-whatis   "bat-0.18.1"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set     version         3.2.9
set     prefix          ${modules_dir}/${version}
set     exec_prefix     ${prefix}
set     datarootdir     ${prefix}/share

prepend-path    PATH            ${hpcc_modules}/bat/0.18.1/bin
prepend-path    MANPATH         ${hpcc_modules}/bat/0.18.1/share/man
setenv          PAGER           "bat"
setenv          MANPAGER        "sh -c 'col -bx | bat -l man -p'"

if { [ module-info mode load ] } {
    set-alias bat "bat --paging=never --theme=base16"
}

