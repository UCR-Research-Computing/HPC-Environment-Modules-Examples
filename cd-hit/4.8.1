#%Module1.0#####################################################################
##
## cd-hit modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tcd-hit - Adds cd-hit to your path"
}

module-whatis	"cd-hit-4.8.1"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

module unload miniconda2 anaconda3 anaconda2
module unload perl
module load miniconda3

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module unload anaconda3 anaconda2 miniconda2; module load miniconda3; source activate cd-hit;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "module unload anaconda3 anaconda2 miniconda2; module load miniconda3; conda deactivate;"
}

prepend-path    PATH    ${hpcc_modules}/miniconda3/4.3.31/envs/cd-hit/bin

prepend-path    PATH            ${hpcc_modules}/cd-hit/4.8.1
prepend-path    PATH            ${hpcc_modules}/cd-hit/4.8.1/cd-hit-auxtools




