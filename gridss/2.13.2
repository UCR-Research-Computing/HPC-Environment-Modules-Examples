#%Module1.0#####################################################################
##
## gridss modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tgridss - Adds grisstools, virusbreakend to your path"
}

module-whatis	"gridss-2.13.2"

set      hpcc_modules    $::env(HPCC_MODULES)

module load samtools
module load java
module load kraken2
module load bwa
module load bcftools
module load RepeatMasker
module load R/4.1.2
prepend-path    PATH            ${hpcc_modules}/gridss/2.13.2/bin:${hpcc_modules}/gridss/2.13.2/scripts

setenv	GRIDSS_JAR	${hpcc_modules}/gridss/2.13.2/lib/java/gridss.jar
setenv	VIRUSBREAKDB	${hpcc_modules}/gridss/2.13.2/data/virusbreakenddb_20210401
prepend-path	KRAKEN2_DB_PATH	${hpcc_modules}/gridss/2.13.2/data
