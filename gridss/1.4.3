#%Module1.0#####################################################################
##
## gridss modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tgridss - Defines GRIDSS_JAR variable"
}

module-whatis	"gridss-1.4.3"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

setenv	GRIDSS_JAR	${hpcc_modules}/gridss/1.4.3/gridss.jar
module unload java
module load java/8

module		use		${modules_dir}

