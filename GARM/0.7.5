#%Module1.0#####################################################################
##
## GARM modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tGARM - Adds GARM.pl to your path"
}

module-whatis	"GARM-0.7.5"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

prepend-path    PATH	${iigb_modules}/GARM/0.7.5
setenv GARMBIN	${iigb_modules}/GARM/0.7.5/bin
setenv GARMLIB	${iigb_modules}/GARM/0.7.5/lib
setenv	MUMBIN	${iigb_modules}/GARM/0.7.5/MUMmer3.22
setenv	AMOSBIN	${iigb_modules}/GARM/0.7.5/amos-3.0.0/bin
module		use		${modules_dir}

