#%Module1.0#####################################################################
##
## GARM modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tGARM - Adds GARM.pl to your path"
}

module-whatis	"GARM-0.7.5"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

prepend-path    PATH	${hpcc_modules}/GARM/0.7.5
setenv GARMBIN	${hpcc_modules}/GARM/0.7.5/bin
setenv GARMLIB	${hpcc_modules}/GARM/0.7.5/lib
setenv MUMBIN  ${hpcc_modules}/mummer/3.23/bin
setenv AMOSBIN ${hpcc_modules}/amos/3.1.0/bin
module load amos
module load mummer
module		use		${modules_dir}

