#%Module1.0#####################################################################
##
## htslib modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\thtslib- Adds htslib to your path"
}

module-whatis	"htslib-1.333"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

prepend-path    PATH            ${iigb_modules}/htslib/1.3/bin
prepend-path	MANPATH		${iigb_modules}/htslib/1.3/share/man
prepend-path	LIBRARY_PATH	${iigb_modules}/htslib/1.3/lib
prepend-path	LD_LIBRARY_PATH	${iigb_modules}/htslib/1.3/lib
prepend-path	CPATH		${iigb_modules}/htslib/1.3/include	
module		use		${modules_dir}

