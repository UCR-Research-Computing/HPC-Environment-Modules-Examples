#%Module1.0#####################################################################
##
## checkv modulefile
#
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tcheckv - Adds checkv suite of tools to your path"
}

module-whatis	"checkv-1.0.1"

set      hpcc_modules    $::env(HPCC_MODULES)

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda activate ${hpcc_modules}/checkv/1.0.1;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}

setenv CHECKVDB	/srv/projects/db/checkv/latest
