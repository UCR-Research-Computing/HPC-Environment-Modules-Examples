#%Module1.0#####################################################################
##
## samtools modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tsamtools - Adds samtools to your path"
}

module-whatis	"samtools-1.2.1"

# for Tcl script use only
set	version		3.2.9
set	prefix		/usr/local/Modules/3.2.9
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share


prepend-path    PATH   		/opt/samtools/1.2.1/bin
prepend-path    LD_LIBRARY_PATH   		/opt/samtools/1.2.1/lib
prepend-path    MANPATH   		/opt/samtools/1.2.1/share/man

module		use		/usr/local/Modules/versions


