#%Module1.0#####################################################################
##
## trinity-rnaseq modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\ttrinity-rnaseq - Adds trinity RNA-Seq assembler to your path"
}

module-whatis	"trinity-rnaseq-2.0.2"

# for Tcl script use only
set	version		3.2.9
set	prefix		/usr/local/Modules/3.2.9
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

module load java
module load bowtie2
module load samtools/1.1
prepend-path	PATH	/opt/trinity-rnaseq/2.0.2
prepend-path	PATH	/opt/trinity-rnaseq/2.0.2/util
prepend-path	CLASSPATH	/opt/trinity-rnaseq/2.0.2/Analysis/Trinotate/java
setenv TRINITY_HOME /opt/trinity-rnaseq/2.0.2
module		use		/usr/local/Modules/versions
