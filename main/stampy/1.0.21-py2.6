##
## stampy modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tstampy Adds stampy for Python 2.6 for short-read alignment"
}

module-whatis	"stampy-1.0.21-py2.6"

# for Tcl script use only
set	version		3.2.9
set	prefix		/usr/local/Modules/3.2.9
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

module load python/2.6.8

prepend-path	PATH	/opt/stampy/1.0.21-py2.6
prepend-path	PYTHONPATH	/opt/stampy/1.0.21-py2.6
prepend-path	LD_LIBRARY_PATH	/opt/stampy/1.0.21-py2.6
module		use		/usr/local/Modules/versions
