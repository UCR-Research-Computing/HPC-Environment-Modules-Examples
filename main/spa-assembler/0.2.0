#%Module1.0#####################################################################
##
## spa-assembler modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tspa-assembler - Adds spa-assembler into your path"
}

module-whatis	"spa-assembler-0.2.0"

# for Tcl script use only
set	version		3.2.9
set	prefix		/usr/local/Modules/3.2.9
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

module load boost
module load perl
prepend-path	PATH	/opt/spa-assembler/0.2.0/3rd/mga_ia64
prepend-path	PATH	/opt/spa-assembler/0.2.0/3rd/FragGeneScan1.16
prepend-path	PATH	/opt/spa-assembler/0.2.0/script
prepend-path	PATH	/opt/spa-assembler/0.2.0/bin
prepend-path	PERL5LIB	/opt/spa-assembler/0.2.0/lib/perl5
prepend-path	LD_LIBRARY_PATH	/opt/spa-assembler/0.2.0/lib
module		use		/usr/local/Modules/versions
