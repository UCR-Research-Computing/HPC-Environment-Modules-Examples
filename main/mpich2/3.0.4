#%Module1.0#####################################################################
##
## mpiblas modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tMPICH2 - Adds MPICH 3.0.4 to your path"
}

module-whatis	"mpich2-3.0.4"

# for Tcl script use only
set	version		3.2.9
set	prefix		/usr/local/Modules/3.2.9
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

prepend-path    PATH   		    /opt/mpich2/3.0.4/bin
prepend-path    CPATH           /opt/mpich2/3.0.4/include
prepend-path    LIBRARY_PATH    /opt/mpich2/3.0.4/lib
prepend-path    LD_LIBRARY_PATH /opt/mpich2/3.0.4/lib
prepend-path    MANPATH         /opt/mpich2/3.0.4/share/man

module		use		/usr/local/Modules/versions

