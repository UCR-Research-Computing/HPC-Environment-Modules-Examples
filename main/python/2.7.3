#%Module1.0#####################################################################
##
## Python2.7 modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tpython2 - Adds python2.7 to your path"
}

module-whatis	"python-2.7.3"

# for Tcl script use only
set	version		3.2.9
set	prefix		/usr/local/Modules/3.2.9
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share


prepend-path    PATH   		/opt/Python/2.7.3/bin
prepend-path    CPATH       /opt/Python/2.7.3/include
prepend-path    LIBRARY_PATH /opt/Python/2.7.3/lib
prepend-path    LD_LIBRARY_PATH /opt/Python/2.7.3/lib
prepend-path    MANPATH  	/opt/Python/2.7.3/share/man

module		use		/usr/local/Modules/versions

