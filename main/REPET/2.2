#%Module1.0#####################################################################
##
## REPET modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tREPET - Adds the REPET pipeline to your path"
}

module-whatis	"REPET-2.2"

# for Tcl script use only
set	version		3.2.9
set	prefix		/usr/local/Modules/3.2.9
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share


prepend-path    PATH   		/opt/REPET/2.2/bin

prepend-path   REPET_PATH /opt/REPET/2.2

module load ncbi-blast/2.2.29+
module load hmmer/3.1b1
module load censor/4.2

module		use		/usr/local/Modules/versions

