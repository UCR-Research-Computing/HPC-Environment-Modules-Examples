proc ModulesHelp { } {
        global version prefix

        puts stderr "\tlp_solve - Adds lp_solve to your path"
}

module-whatis	"lP-solve-5.5"

# for Tcl script use only
set	version		3.2.9
set	prefix		/usr/local/Modules/3.2.9
set	exec_prefix	${prefix}
