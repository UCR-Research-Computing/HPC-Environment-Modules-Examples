prepend-path    PATH   		     /opt/lp_solve/5.5/bin
prepend-path    CPATH            /opt/lp_solve/5.5/include
prepend-path    LIBRARY_PATH     /opt/lp_solve/5.5/lib
prepend-path    LD_LIBRARY_PATH  /opt/lp_solve/5.5/lib

module		use		/usr/local/Modules/versions

