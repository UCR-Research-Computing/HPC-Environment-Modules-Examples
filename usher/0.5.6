#%Module1.0#####################################################################
##
## usher modulefile
#
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tusher - Adds usher tree update tool to your path"
}

module-whatis	"usher-0.5.6"

set      hpcc_modules    $::env(HPCC_MODULES)


if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda activate ${hpcc_modules}/usher/0.5.6;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}
