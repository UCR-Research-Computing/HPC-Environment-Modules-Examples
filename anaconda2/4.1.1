#} elseif { [module-info mode remove] && ![module-info mode switch3] } {
#    puts stdout ""
#}

setenv      PYTHONPATH  ""

prepend-path	PATH	${iigb_modules}/anaconda2/4.1.1/bin
module		use		${modules_dir}
