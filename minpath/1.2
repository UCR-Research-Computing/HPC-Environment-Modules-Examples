#%Module1.0#####################################################################
##
## minpath modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tminpath- Adds minpath to your path"
}

module-whatis	"minpath-1.2"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share


prepend-path    PATH              ${iigb_modules}/minpath/1.2/
setenv          MinPath           ${iigb_modules}/minpath/1.2/

module		use		${modules_dir}

