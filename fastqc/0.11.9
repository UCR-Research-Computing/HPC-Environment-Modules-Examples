#%Module1.0#####################################################################
##
## fastqc modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tfastqc - Adds fastqc to your path"
}

module-whatis	"fastqc-0.11.9"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

# Seems to work, but lets use the default java for now
#module load java/13.0.1

# Reload default, not needed, but good for noting dep
module load java/7u40

prepend-path    PATH    ${hpcc_modules}/fastqc/0.11.9

