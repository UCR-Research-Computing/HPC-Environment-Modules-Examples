#%Module1.0#####################################################################
##
## octopus modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\toctopus- Adds octopus to your path"
}

module-whatis	"octopus-9.1"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

# Load prereqs
module load slurm/19.05.0
module load openmpi/4.0.1-slurm-19.05.0
module load gsl/2.5
module load libxc/4.2.3

# Check prereqs
prereq slurm/19.05.0
prereq openmpi/4.0.1-slurm-19.05.0
prereq gsl/2.5
prereq libxc/4.2.3

# Define paths
prepend-path    PATH            ${hpcc_modules}/octopus/9.1/bin
prepend-path    MANPATH         ${hpcc_modules}/octopus/9.1/share/man

