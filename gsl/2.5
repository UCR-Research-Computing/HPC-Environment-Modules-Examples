#%Module1.0#####################################################################
##
## gsl modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tgsl- Adds gsl to your path"
}

module-whatis	"gsl-2.5"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

prepend-path    PATH              ${iigb_modules}/gsl/2.5/bin
prepend-path    LD_LIBRARY_PATH   ${iigb_modules}/gsl/2.5/lib
prepend-path    INCLUDE_PATH      ${iigb_modules}/gsl/2.5/include
prepend-path    MANPATH           ${iigb_modules}/gsl/2.5/share/man

