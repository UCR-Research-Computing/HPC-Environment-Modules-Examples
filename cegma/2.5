#%Module1.0#####################################################################
##
## maui modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tcegma - Adds cegma to your path"
}

module-whatis	"cegma-2.5"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share


prepend-path    PATH            ${hpcc_modules}/cegma/2.5/bin
prepend-path    PERL5LIB    	${hpcc_modules}/cegma/2.5/lib
setenv	CEGMA ${hpcc_modules}/cegma/2.5
setenv	CEGMATMP	/scratch
module		use		${modules_dir}

module load hmmer/3.0
module load genewise
module load SNAP
module load geneid
module load ncbi-blast/2.2.25+
module switch perl/5.24.0
