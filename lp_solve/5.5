#%Module1.0#####################################################################
##
## lp_solve modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tlp_solve - lp_solve libs to your library path runpath"
}

module-whatis	"lp_solve-5.5"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

prepend-path	LD_RUN_PATH	${iigb_modules}/lp_solve/5.5/lib
prepend-path	LD_LIBRARY_PATH	${iigb_modules}/lp_solve/5.5/lib
module		use		${modules_dir}

