#%Module1.0#####################################################################
##
## bowtie2 modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tbowtie2 - Adds bowtie2 to your path"
}

module-whatis	"bowtie2-2.2.5"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share


prepend-path    PATH            ${hpcc_modules}/bowtie2/2.2.5/bin:${hpcc_modules}/bowtie2/2.2.5/scripts

