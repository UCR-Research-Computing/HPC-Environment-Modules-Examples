#%Module1.0#####################################################################
##
## gocryptfs modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tgocryptfs- Adds gocryptfs to your path"
}

module-whatis	"gocryptfs-1.7"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)
set      euid            $::env(EUID)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

setenv          SHARED_ENCRYPTED_DIR      ~/shared/unencrypted
setenv          BIGDATA_ENCRYPTED_DIR     ~/bigdata/unencrypted
setenv          HOME_ENCRYPTED_DIR        ~/encrypted
setenv          UNENCRYPTED_DIR           /run/user/${euid}/unencrypted

prepend-path    PATH            ${hpcc_modules}/gocryptfs/1.7/bin
prepend-path    MANPATH         ${hpcc_modules}/gocryptfs/1.7/share/man

