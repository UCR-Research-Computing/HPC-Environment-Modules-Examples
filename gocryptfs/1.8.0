#%Module1.0#####################################################################
##
## gocryptfs modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tgocryptfs- Adds gocryptfs to your path"
}

module-whatis	"gocryptfs-1.8.0"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)
set      euid            [exec id -u]

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

setenv          SHARED_ENCRYPTED      ~/shared/encrypted
setenv          BIGDATA_ENCRYPTED     ~/bigdata/encrypted
setenv          HOME_ENCRYPTED        ~/encrypted
setenv          UNENCRYPTED           /run/user/${euid}/unencrypted

prepend-path    PATH            ${hpcc_modules}/gocryptfs/1.8.0/bin
prepend-path    MANPATH         ${hpcc_modules}/gocryptfs/1.8.0/share/man

