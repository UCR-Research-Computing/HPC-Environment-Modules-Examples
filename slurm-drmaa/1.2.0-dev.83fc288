#%Module1.0#####################################################################
##
## slurm-drmaa modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tslurm-drmaa - Adds slurm-drmaa to your path"
}

module-whatis	"slurm-drmaa-1.2.0-dev.83fc288"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

prepend-path    PATH            ${hpcc_modules}/slurm-drmaa/1.2.0-dev.83fc288/bin
prepend-path    CPATH           ${hpcc_modules}/slurm-drmaa/1.2.0-dev.83fc288/include
prepend-path    LD_LIBRARY_PATH ${hpcc_modules}/slurm-drmaa/1.2.0-dev.83fc288/lib

setenv  SLURM_DRMAA_CONF    ${hpcc_modules}/slurm-drmaa/1.2.0-dev.83fc288/etc/slurm_drmaa.conf
setenv  DRMAA_LIBRARY_PATH  ${hpcc_modules}/slurm-drmaa/1.2.0-dev.83fc288/lib/libdrmaa.so

module use ${modules_dir}
