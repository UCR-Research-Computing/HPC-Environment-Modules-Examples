#%Module1.0#####################################################################
##
## Java modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\t - Adds Java to your path"
}

module-whatis   "java-17.0.2"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set     version         3.2.9
set     prefix          ${modules_dir}/${version}
set     exec_prefix     ${prefix}
set     datarootdir     ${prefix}/share

prepend-path     PATH             ${hpcc_modules}/java/17.0.2/bin:${hpcc_modules}/java/17.0.2/lib/server/
prepend-path     MANPATH          ${hpcc_modules}/java/17.0.2/man
prepend-path     C_INCLUDE_PATH   ${hpcc_modules}/java/17.0.2/include
prepend-path     LD_LIBRARY_PATH  ${hpcc_modules}/java/17.0.2/lib
setenv           JAVA_HOME        ${hpcc_modules}/java/17.0.2

