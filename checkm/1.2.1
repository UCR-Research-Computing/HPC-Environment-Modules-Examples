#%Module1.0#####################################################################
##
## checkm modulefile
#
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tcheckm - Adds checkm suite of tools to your path"
}

module-whatis	"checkm-1.2.1"

set      hpcc_modules    $::env(HPCC_MODULES)

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda activate ${hpcc_modules}/checkm/1.2.1;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}
