#%Module1.0#####################################################################
##
## itpp modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\titpp - Adds IT++ to your path"
}

module-whatis	"itpp-4.3.1"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share


prepend-path    PATH   		${iigb_modules}/itpp/4.3.1/bin
prepend-path    CPLUS_INCLUDE_PATH  ${iigb_modules}/itpp/4.3.1/include
prepend-path    MANPATH         ${iigb_modules}/itpp/4.3.1/share/man

module		use		${modules_dir}

