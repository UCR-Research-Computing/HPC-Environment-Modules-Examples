#%Module1.0#####################################################################
##
## rtg-tools modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\trtg-tools - add rtg (Real Time Genomics) to path"
}

module-whatis   "rtg-tools-3.12-1"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set     version         3.2.9
set     prefix          ${modules_dir}/${version}
set     exec_prefix     ${prefix}
set     datarootdir     ${prefix}/share

module load java/8

prepend-path    PATH            ${hpcc_modules}/rtg-tools/3.12.1
source-sh ${hpcc_modules}/rtg-tools/3.12.1/scripts/rtg-bash-completion
