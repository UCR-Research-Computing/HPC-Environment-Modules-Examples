#%Module1.0#####################################################################
##
## purge_haplotigs modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tpurge_haplotigs - Adds purge_haplotigs to your path"
}

module-whatis	"purge_haplotigs"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

# All python versions need to be unloaded
module load bedtools
module load samtools
module load minimap2
module load R
module unload perl
module unload perl
module load perl/5.24.0

prepend-path    PATH            ${hpcc_modules}/purge_haplotigs/1.0.4/bin
prepend-path	PERL5LIB	$hpcc_modules}/purge_haplotigs/1.0.4/lib

