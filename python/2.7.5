#%Module1.0#####################################################################
##
## Python modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tPython - Adds Python 2.7 to your path"
}

module-whatis	"python-2.7.5"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set     prefix          ${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

# All python versions need to be unloaded
conflict    python
conflict    anaconda
conflict    miniconda

prepend-path    PATH   		${hpcc_modules}/python/2.7.5/bin
#prepend-path    CPATH           ${hpcc_modules}/python/2.7.5/include
prepend-path    LD_LIBRARY_PATH ${hpcc_modules}/python/2.7.5/lib
#prepend-path    MANPATH  	${hpcc_modules}/python/2.7.5/share/man
prepend-path	PYTHONPATH	${hpcc_modules}/python/2.7.5/lib/python2.7/site-packages:${hpcc_modules}/python/2.7.5/lib64/python2.7/site-packages:/usr/lib/python2.7/site-packages:/usr/lib64/python2.7/site-packages


