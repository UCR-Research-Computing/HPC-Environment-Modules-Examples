#%Module1.0#####################################################################
##
## Python modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tPython - Adds Python 3.4.3 to your path"
}

module-whatis	"python-3.4.3"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set     prefix          ${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

prepend-path    PATH   		${iigb_modules}/python/3.4.3/bin
#prepend-path    CPATH           ${iigb_modules}/python/2.7.5/include
prepend-path    LD_LIBRARY_PATH ${iigb_modules}/python/3.4.3/lib
#prepend-path    MANPATH  	${iigb_modules}/python/2.7.5/share/man
prepend-path	PYTHONPATH	${iigb_modules}/python/3.4.3/lib/python3.4/site-packages:${iigb_modules}/python/3.4.3/lib64/python3.4/site-packages #:/usr/lib/python3.4/site-packages:/usr/lib64/python3.4/site-packages

module		use		${modules_dir}

