#%Module1.0#####################################################################
##
## Python modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tPython - Adds Python 3.9.1 to your path"
}

module-whatis	"python-3.9.1"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

conflict python
conflict miniconda2
conflict miniconda3
conflict anaconda2
conflict anaconda3

prepend-path    PATH   		    ${hpcc_modules}/python/3.9.1/bin
prepend-path    CPATH           ${hpcc_modules}/python/3.9.1/include
prepend-path    LD_LIBRARY_PATH ${hpcc_modules}/python/3.9.1/lib
prepend-path    MANPATH         ${hpcc_modules}/python/3.9.1/share/man
prepend-path	PYTHONPATH      ${hpcc_modules}/python/3.9.1/lib/python3.6/site-packages:${hpcc_modules}/python/3.9.1/lib64/python3.6/site-packages

