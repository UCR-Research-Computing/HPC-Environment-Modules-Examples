#%Module1.0#####################################################################
##
## ssu-align modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tssu-align - Adds cmsearch/ssu-align to your path"
}

module-whatis	"ssu-align-0.1.1"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

prepend-path    PATH            ${iigb_modules}/ssu-align/0.1.1/bin
prepend-path	MANPATH	${iigb_modules}/ssu-align/0.1.1/share/man"
setenv SSUALIGNDIR	${iigb_modules}/ssu-align/0.1.1/share/ssu-align-0.1.1

module		use		${modules_dir}

