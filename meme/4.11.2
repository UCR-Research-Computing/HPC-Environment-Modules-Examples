#%Module1.0#####################################################################
##
## maui modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tmeme - Adds meme to your path"
}

module-whatis	"meme-4.11.2"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

prepend-path    PATH            ${hpcc_modules}/meme/4.11.2/bin
prepend-path    PERL5LIB        ${hpcc_modules}/meme/4.11.2/lib/perl
prepend-path    PYTHONPATH      ${hpcc_modules}/meme/4.11.2/lib/python
prepend-path	LD_LIBRARY_PATH	${hpcc_modules}/hwloc/2.0.3/lib:${hpcc_modules}/libevent/2.0.22/lib

module		use		${modules_dir}

