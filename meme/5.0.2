#%Module1.0#####################################################################
##
## maui modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tmeme - Adds meme to your path"
}

module-whatis	"meme-5.0.2"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share


prepend-path    PATH            ${hpcc_modules}/meme/5.0.2/bin
prepend-path    PERL5LIB        ${hpcc_modules}/meme/5.0.2/lib/meme-5.0.2/perl
prepend-path    PYTHONPATH      ${hpcc_modules}/meme/5.0.2/lib/meme-5.0.2/python

module		use		${modules_dir}

