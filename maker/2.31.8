proc ModulesHelp { } {
        global version prefix

        puts stderr "\tMAKER - Adds MAKER 2.28 tools to your paths"
}

module-whatis   "MAKER-2.31.8"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set version     3.2.9
set prefix      /usr/local/Modules/3.2.9
set exec_prefix ${prefix}
set datarootdir ${prefix}/share

#module unload perl
#module load perl/5.22.0
module load openmpi/1.8.4-torque-5.1.0

prepend-path     PATH              ${iigb_modules}/maker/2.31.8/bin
prepend-path     PERL5LIB          ${iigb_modules}/maker/2.31.8/lib:${iigb_modules}/maker/2.31.8/perl/lib
prepend-path     MANPATH           ${iigb_modules}/maker/2.31.8/man

# Moved Slurm version of LD_PRELOAD to the OpenMPI module
#prepend-path	LD_PRELOAD	 ${iigb_modules}/openmpi/1.8.4-torque-5.1.0/lib/libmpi.so
module           use               ${modules_dir}

module load ncbi-blast/2.2.26
module load ncbi-blast/2.2.31+
module load SNAP
module load augustus/2.7
module load RepeatMasker
module load exonerate/2.4.0
module load hmmer/3
module load genemarkHMM/4.32
module load tRNAscan
module load snoscan
