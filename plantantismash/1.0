#%Module1.0#####################################################################
##
## plantantismash modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tplantantismash- Adds plant antismash to your path"
}

module-whatis	"plantantismash-1.0"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share


# Unload miniconda
module unload miniconda2 anaconda2 anaconda3
module unload python

conflict    python
conflict    anaconda

module load miniconda3
module load hmmer/2
module load hmmer/3
module load fasttree
module load diamond/0.9.24
module load prodigal
module load ncbi-blast/2.9.0+
module load muscle
module load meme/4.11.2
module load glimmerhmm/3.0.4
module load glimmer/3.02
#module load cd-hit/4.8.1 - since this also depends on a conda env will just load and install directly in plantantismash env

# Set character encoding
setenv LC_ALL en_US.utf-8
setenv LANG en_US.utf-8

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module unload anaconda3 anaconda2 miniconda2; module load miniconda3; source activate plantantismash;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "module unload anaconda3 anaconda2 miniconda2; module load miniconda3; conda deactivate;"
}

# Add path manually, since source activate does not function within parent shell
prepend-path    PATH    ${hpcc_modules}/miniconda3/envs/plantantismash/bin

module		use		${modules_dir}
