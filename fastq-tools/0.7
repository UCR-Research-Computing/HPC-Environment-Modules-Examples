#%Module1.0#####################################################################
##
## maui modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tfastq-tools - Adds fastq-tools to your path"
}

module-whatis	"fastq-tools-0.7"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share


prepend-path    PATH            ${iigb_modules}/fastq-tools/0.7/bin
prepend-path	MANPATH		${iigb_modules}/fastq-tools/0.7/share/man

module		use		${modules_dir}

