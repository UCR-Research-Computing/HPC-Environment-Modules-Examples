#%Module1.0#####################################################################
##
## KEGG-Decoder modulefile
#
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tKEGG-Decoder- Adds KEGG-Decoder to your path"
}

module-whatis	"KEGG-Decoder-1.3"

set      hpcc_modules    $::env(HPCC_MODULES)

# Load miniconda
module load miniconda3

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda activate ${hpcc_modules}/KEGG-Decoder/1.3/env;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}

setenv KOFAMSCAN_CONFIG	/opt/linux/centos/8.x/x86_64/pkgs/KEGG-Decoder/1.3/config/config.yml 
setenv KOFAM_DB	/srv/projects/db/koscan/2022-06-02
