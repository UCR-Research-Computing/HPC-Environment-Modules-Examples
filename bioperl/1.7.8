#%Module1.0#####################################################################
##
## bioperl modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tbioperl - Adds bioperl modules to your path"
}

module-whatis	"bioperl-1.7.8"

set      hpcc_modules    $::env(HPCC_MODULES)

# Load miniconda
module load miniconda3

if { [module-info mode load] || [module-info mode switch2] } {
    puts stdout "module load miniconda3; conda activate ${hpcc_modules}/bioperl/1.7.8/env;"
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    puts stdout "conda deactivate;"
}

