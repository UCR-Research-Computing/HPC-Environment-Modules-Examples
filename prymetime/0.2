#%Module1.0#####################################################################
##
## prymetime modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tprymetime- Adds freefem to your path"
}

module-whatis	"prymetime-0.2"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

module load singularity

prepend-path    PATH             ${hpcc_modules}/prymetime/0.2/bin
setenv          PRYMETIME_SING    ${hpcc_modules}/prymetime/0.2/images/prymetime.simg

