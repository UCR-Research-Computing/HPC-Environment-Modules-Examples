#%Module1.0#####################################################################
##
## rascaf modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\trascaf - Adds rascaf for genome scaffolding from RNAseq to your path"
}

module-whatis	"rascaf-1.0.2"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

prepend-path	PATH	${hpcc_modules}/rascaf/1.0.2


