#%Module1.0#####################################################################
##
## maui modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\twien2k - Adds wien2k to your path"
}

module-whatis   "wien2k-14.2"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set     version         3.2.9
set     prefix          ${modules_dir}/${version}
set     exec_prefix     ${prefix}
set     datarootdir     ${prefix}/share



prepend-path    PATH            ${iigb_modules}/wien2k/14.2:/opt/linux/centos/7.x/x86_64/pkgs/wien2k/14.2/SRC_BerryPI/BerryPI
setenv          BERRYPI_PATH    ${iigb_modules}/wien2k/14.2/SRC_BerryPI/BerryPI

module          use             ${modules_dir}

