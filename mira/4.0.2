#%Module1.0#####################################################################
##
## maui modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tmira - Adds mira to your path"
}

module-whatis   "mira-4.0.2"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set     version         3.2.9
set     prefix          ${modules_dir}/${version}
set     exec_prefix     ${prefix}
set     datarootdir     ${prefix}/share



prepend-path    PATH            ${hpcc_modules}/mira/4.0.2/bin
prepend-path    PATH            ${hpcc_modules}/mira/4.0.2/scripts
prepend-path    MANPATH         ${hpcc_modules}/mira/4.0.2/docs


