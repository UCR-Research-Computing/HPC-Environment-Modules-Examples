#%Module1.0#####################################################################
##
## poreminion modulefile
#
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tporeminion - Adds poreminion to your path"
}

module-whatis	"poreminion-0.4.4"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share


prepend-path	PYTHONPATH	${iigb_modules}/poreminion/0.4.4/lib/python2.7/site-packages/
prepend-path	PATH	${iigb_modules}/poreminion/0.4.4/bin
module		use		${modules_dir}
