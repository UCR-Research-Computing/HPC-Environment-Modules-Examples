#%Module1.0#####################################################################
##
## GenomeThreader modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tGemomeThreader - Adds GenomeThreader tools (gth) to your path"
}

module-whatis	"GenomeThreader-1.7.1"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

prepend-path    PATH            ${iigb_modules}/GenomeThreader/1.7.1/bin

module use ${modules_dir}
