#%Module1.0#####################################################################
##
## bamtools modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tbamtools - Adds bamtools 2.5.2 to your path"
}

module-whatis	"bamtools-2.5.2"

set      hpcc_modules    $::env(HPCC_MODULES)

prepend-path    PATH            ${hpcc_modules}/bamtools/2.5.2/bin
prepend-path    CPATH           ${hpcc_modules}/bamtools/2.5.2/include
prepend-path    LIBRARY_PATH    ${hpcc_modules}/bamtools/2.5.2/lib64
prepend-path    LD_LIBRARY_PATH ${hpcc_modules}/bamtools/2.5.2/lib64
setenv          BAMTOOLS_PATH   ${hpcc_modules}/bamtools/2.5.2/bin

