#%Module1.0#####################################################################
##
## eman2 modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\teman2- Adds eman2 to your path"
}

module-whatis	"eman2-2.3"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share


# Unload miniconda
module unload python anaconda2 anaconda3 miniconda2 miniconda3
conflict    python
conflict    miniconda

# Conda init will be handled manually/externally
# puts stdout "${hpcc_modules}/eman2/2.3/bin/conda init bash"

# Add path for internal conda
prepend-path    PATH    ${hpcc_modules}/eman2/2.3/bin

