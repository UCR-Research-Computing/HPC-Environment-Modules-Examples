#%Module1.0#####################################################################
##
## genometools modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tgenometools - Adds genometools 1.5.6 to your path"
}

module-whatis   "genometools-1.5.6"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set     version         3.2.9
set     prefix          ${modules_dir}/${version}
set     exec_prefix     ${prefix}
set     datarootdir     ${prefix}/share

prepend-path    PATH             ${iigb_modules}/genometools/1.5.6/bin
prepend-path    LD_LIBRARY_PATH  ${iigb_modules}/genometools/1.5.6/lib

module           use              ${modules_dir}

