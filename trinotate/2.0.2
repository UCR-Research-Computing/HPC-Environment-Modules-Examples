#%Module1.0#####################################################################
##
## Trinotate modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\ttrinotate - Adds trinotate to your path"
}

module-whatis	"trinotate-2.0.2"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

module load trinity-rnaseq
module load hmmer
module load ncbi-blast
module laod signalp
module load rnammer

prepend-path    PATH            ${iigb_modules}/trinotate/2.0.2
prepend-path    PATH            ${iigb_modules}/trinotate/2.0.2/util
prepend-path    CLASSPATH     	${iigb_modules}/trinotate/2.0.2/java
prepend-path    PERL5LIB        ${iigb_modules}/trinotate/2.0.2/PerlLib

module		use		${modules_dir}

