#%Module1.0#####################################################################
##
## Trinotate modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\ttrinotate - Adds trinotate to your path"
}

module-whatis	"trinotate-3.2.2"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

module load trinity-rnaseq/2.2.0
prereq trinity-rnaseq/2.2.0
module load db-trinotate
module load hmmer
module load ncbi-blast
module load signalp
module load rnammer

prepend-path    PATH            ${hpcc_modules}/trinotate/3.2.2
prepend-path    PATH            ${hpcc_modules}/trinotate/3.2.2/util
prepend-path    PERL5LIB        ${hpcc_modules}/trinotate/3.2.2/PerlLib


