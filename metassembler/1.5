#%Module1.0#####################################################################
##
## metassembler modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tmetassembler - Adds metassembler to your path"
}

module-whatis	"metassembler-1.5"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

module load mummer
module load bowtie2
module load samtools

prepend-path    PATH    ${hpcc_modules}/metassembler/1.5/bin

module use ${modules_dir}
