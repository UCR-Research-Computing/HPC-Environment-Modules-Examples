#%Module1.0#####################################################################
##
## PASA modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tPASA - Adds PASA to your path"
}

module-whatis	"PASA-2.4.1"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		/usr/local/Modules/3.2.9
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

module load gmap/2017-11-15
prereq      gmap
module load fasta
prereq      fasta

#setenv          PASAHOME     ~/.pasa
setenv          PASAHOME      ${hpcc_modules}/PASA/2.4.1
prepend-path    PATH          ${hpcc_modules}/PASA/2.4.1/bin:${hpcc_modules}/PASA/2.4.1
prepend-path    PERL5LIB      ${hpcc_modules}/PASA/2.4.1/PerlLib


