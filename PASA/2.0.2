#%Module1.0#####################################################################
##
## PASA modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tPASA - Adds PASA to your path"
}

module-whatis	"PASA-2.0.2"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		/usr/local/Modules/3.2.9
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

module load gmap
prereq      gmap
module load fasta
prereq      fasta

setenv          PASAHOME      ~/.pasa
prepend-path    PATH          ${hpcc_modules}/PASA/2.0.2/bin:${hpcc_modules}/PASA/2.0.2/seqclean/seqclean:${hpcc_modules}/PASA/2.0.2/seqclean/seqclean/bin
prepend-path    PERL5LIB      ${hpcc_modules}/PASA/2.0.2/PerlLib

module		use           ${modules_dir}

