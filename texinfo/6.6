#%Module1.0#####################################################################
##
## texinfo modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\ttexinfo- Adds texinfo to your path"
}

module-whatis	"texinfo-6.6"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

prepend-path    PATH            ${hpcc_modules}/texinfo/6.6/bin
prepend-path    MANPATH         ${hpcc_modules}/texinfo/6.6/share/man

