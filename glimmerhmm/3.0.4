#%Module1.0#####################################################################
##
## glimmerhmm modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tglimmerhmm - Adds glimmerhmm to your path"
}

module-whatis	"glimmerhmm-3.0.4"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share


prepend-path    PATH            ${hpcc_modules}/glimmerhmm/3.0.4/bin
prepend-path    PATH            ${hpcc_modules}/glimmerhmm/3.0.4/train
prepend-path	PERL5LIB	${hpcc_modules}/glimmerhmm/3.0.4/train


