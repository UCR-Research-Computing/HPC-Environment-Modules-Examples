#%Module1.0#####################################################################
##
## beast modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tbeast - Adds beast to your path"
}

module-whatis	"beast-2.5.1"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

module load java/8u25

prepend-path    PATH        ${hpcc_modules}/beast/2.5.1/bin
prepend-path    CLASSPATH   ${hpcc_modules}/beast/2.5.1/lib
setenv          BEAST_LIB   ${hpcc_modules}/beast/2.5.1/lib

