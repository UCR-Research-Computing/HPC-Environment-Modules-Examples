#%Module1.0#####################################################################
##
## beast modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tbeast - Adds beast to your path"
}

module-whatis	"beast-2.3.1"

set      iigb_modules    $::env(IIGB_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

prepend-path    PATH   	    ${iigb_modules}/beast/2.3.1/bin
prepend-path    CLASSPATH   ${iigb_modules}/beast/2.3.1/lib
setenv          BEAST_LIB   ${iigb_modules}/beast/2.3.1/lib

module		use		${modules_dir}
module load java/8

