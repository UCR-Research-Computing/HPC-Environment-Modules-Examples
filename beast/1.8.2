#%Module1.0#####################################################################
##
## maui modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tbeast - Adds beast to your path"
}

module-whatis	"beast-1.8.2"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share


prepend-path    PATH   		${hpcc_modules}/beast/1.8.2/bin
prepend-path    CLASSPATH   ${hpcc_modules}/beast/1.8.2/lib
setenv          BEAST_LIB   ${hpcc_modules}/beast/1.8.2/lib

module		use		${modules_dir}

