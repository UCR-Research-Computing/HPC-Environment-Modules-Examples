#%Module1.0#####################################################################
##
## gdal modulefile
##
proc ModulesHelp { } {
        global version prefix

        puts stderr "\tgdal - Adds gdal to your path"
}

module-whatis	"gdal-2.1.3"

set      hpcc_modules    $::env(HPCC_MODULES)
set      modules_dir     $::env(MODULES_DIR)

# for Tcl script use only
set	version		3.2.9
set	prefix		${modules_dir}/${version}
set	exec_prefix	${prefix}
set	datarootdir	${prefix}/share

prepend-path    PATH                ${hpcc_modules}/gdal/2.1.3/bin
prepend-path    CPATH               ${hpcc_modules}/gdal/2.1.3/include
prepend-path    LD_LIBRARY_PATH     ${hpcc_modules}/gdal/2.1.3/lib
prepend-path    LIBRARY_PATH        ${hpcc_modules}/gdal/2.1.3/lib

module use ${modules_dir}
